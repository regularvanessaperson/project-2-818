<div class="banner-pic">
    <h2 style="font-size: 80px;"class=""> Game Results</h2>
    </div>
    
<div class="d-flex justify-content-center padding-20px ">
<form class="form-search"action="/games/games" method="GET">
    <div class="d-flex justify-content-center padding-20px "></div>
    <label for="gameName"></label>
    <label for="gameName"></label>
    <input class="form-control .form-control-lg" placeholder="Search favorite games" type="text" name="name" id="gameName">
    <input class="btn btn-info" type="submit">
    </div>
</form>
</div>
<div class="d-flex justify-content-center flex-wrap">
    <% gameInfo.forEach(game=>{ %>
    <div class="card text-center" style="width: 18rem;">
        <img class="card-img-top" src=<%= game.images.small %> width="100">
        <div class="d-flex flex-column justify-content-end card-body " style="padding: 0;">
            <h4 class="card-title"><%= game.name %></h3>
                <p class="card-text">
                    Players: <%=game.min_players%> - <%=game.max_players%><br>
                    Play time: <%=game.min_playtime%>min - <%=game.max_playtime%>min
                </p>
                <div class="d-flex card-footer justify-content-end">
                    <div class="btn-group">
                        <a class="btn btn-sm btn-outline-secondary" href="/games/<%= game.name %>"> View Game Info</a>
                        <form method="POST" action="/games/library">
                            <input hidden type="text" name="name" value="<%= game.name %>">
                            <input hidden type="text" name="description" value="<%= game.description_preview %>">
                            <input hidden type="text" name="picture" value="<%= game.images.small %>">
                            <input hidden type="text" name="userName" value="<%= currentUser.name %>">
                            <input hidden type="text" name="userId" value="<%= currentUser.id %>">
                            <button class="btn btn-sm btn-outline-secondary" type="submit"> Add to Game
                                Library</button>
                        </form>
                    </div>
                </div>
        </div>
    </div>
    <%}) %>
</div>